<Window x:Class="findFile_txtProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:findFile_txtProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Height="Auto" Width="800" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Name="textBoxName"/>
        <Button Grid.Row="1" Width="200" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Content="PUSH ME DADDY!!!" Click="aBtnClick"/>
    </Grid>
</Window>
